/////////////////// COMMON DELETE ///////////////////////
function ONDELETE_RECORD(ID,CONTROLLER)
{
	if(confirm('Are you sure you want to delete?'))
	{
	 jQuery.post("index.php?r="+CONTROLLER+"/delete", {ID: ID} ,  function(data)
	{	
     window.location.reload(true);
    });
	 }
}
