/**********************************************************Alert Box*************************************************/
function bootbox_alert(header, msg, mycallback) {
    var box = bootbox.dialog({
        message: msg,
        title: header,
        buttons: [
            {
                label: "OK",
                "class": "btn btn-xs",
                click: function() {
                    if (mycallback)
                        mycallback();
                   // $(this).dialog(close); 
                    $(this).modal('hide');
                }
            }]
    });
    box.on('hidden.bs.modal', function (e) {
        if($('.modal.in').css('display') == 'block'){
            $('body').addClass('modal-open');
}
    });
}
function bootbox_refresh(header, msg) {
    bootbox.dialog({
        message: msg,
        title: header,
        buttons: [
            {
                label: "OK",
                "class": "btn btn-xs",
                callback: function() {
					location.reload();
				}
            }]
    });
}
