	jQuery("#USERTYPE_ADD_BUTTON").hide();
	jQuery("#USERTYPE_EDIT_BUTTON").show();
	jQuery("#STATUS_DIV").show();
	jQuery("#STATUS_LABEL_DIV").show();
	jQuery("#TYPE_ID").val(TYPE_ID);
	jQuery("#USER_TYPE").val(USER_TYPE);
	jQuery("#DESCRIPTION").val(DESCRIPTION);
	if(STATUS==1){
